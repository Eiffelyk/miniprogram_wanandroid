/* pages/search/search.wxss */
.top {
  width: 100%;
  height: 115rpx;
  display: flex;
  padding: 20rpx;
  position: fixed;
  box-sizing: border-box;
  background-color: white;
  border-bottom: 15rpx #f4f4f4 solid;
  z-index: 100;
}

.empty-top {
  height: 115rpx;
}

.search {
  height: 100%;
  flex: 1;
  background: #f4f4f4;
  font-size: 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.search image {
  width: 40rpx;
  height: 40rpx;
}

.search input {
  padding-left: 20rpx;
  flex: 1;
  height: 100%;
}

.clear {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.cancle {
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2b2c2c;
  margin-left: 20rpx;
}

.group {
  padding: 40rpx 20rpx;
}

.type-title {
  color: #707070;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.type-clear {
  color: #1f6fb5;
  font-size: 28rpx;
  margin-right: 20rpx;
  float: right;
}

.history {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.history .item {
  font-size: 28rpx;
  color: #2c2c2c;
  border-radius: 28rpx;
  border: 1rpx #2c2c2c solid;
  padding: 6rpx 18rpx;
  margin: 12rpx 18rpx;
}

.hotkey {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.hotkey .item {
  font-size: 28rpx;
  color: #2c2c2c;
  border-radius: 28rpx;
  border: 1rpx rgba(254, 98, 67, 0.5) solid;
  padding: 6rpx 18rpx;
  margin: 12rpx 18rpx;
}