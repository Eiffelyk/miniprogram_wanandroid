/* components/main-navi/main-navi.wxss */
.navi{
  width: 100%;
  background-color: #fe6243;
  box-sizing: border-box;
  position: fixed;
  z-index: 200;
}
.menu{
  border: 1rpx white solid;
  border-radius: 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}
.line{
  width: 1rpx;
  height: 100%;
  margin: 0 10rpx;
  background-color: white;
}
.icon{
  z-index: 100;
}
.title{
  width: 100%;
  font-size: 36rpx;
  color: white;
  text-align: center;
  position: absolute;
}